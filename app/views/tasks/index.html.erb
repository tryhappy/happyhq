<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Status</th>
      <th>Object type</th>
      <th>Object</th>
      <th>Instructions</th>
      <th>Instruction value</th>
      <th>Execute on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.user_id %></td>
        <td><%= task.status %></td>
        <td><%= task.object_type %></td>
        <td><%= task.object_id %></td>
        <td><%= task.instructions %></td>
        <td><%= task.instruction_value %></td>
        <td><%= task.execute_on %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

