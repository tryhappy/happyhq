
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @products %>
  <h2>Update product</h2>
  <%= form_for :product, url: product_update_path, method: :post do |form| %>
    Form contents
    <%= hidden_field_tag(:user_id, @user.id) %>
    <%= select_tag :product_id, options_from_collection_for_select(@products, :id, :title) %>

    <%= form.submit %>
  <% end %>

  <p>
    <strong>Shopify Response</strong><br />

    <% @products.each do |p| %>
      <%= p.title %><br />
    <% end %>
  </p>
<% else %>
<h2>Please add your shopify details to see products</h2>
<%= link_to 'Edit Details', edit_user_path(@user) %>
<% end %>
